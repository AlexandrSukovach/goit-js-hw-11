

{{!-- with-SimpleLightbox --}}

{{#each this}}
<a href="{{largeImageURL}}" >
  <div class="photo-card" style="border-style: solid; border-radius: 5px; border-width: 1px 3px 4px 2px;  border-color: rgb(226, 226, 226);">
  <img class="photo-card__img" style="display: block; width: 100%; height: 200px; object-fit: cover;" src="{{webformatURL}}" alt="{{tags}}" loading="lazy" title="{{tags}}"/>
  <div class="info" style="display: flex; flex-direction: row; justify-content: space-evenly; text-align: center; padding: 10px 20px; ">
    <p class="info-item">
      <b>Likes</b>
      {{likes}}
    </p>
    <p class="info-item">
      <b>Views</b>
      {{views}}
    </p>
    <p class="info-item">
      <b>Comments</b>
      {{comments}}
    </p>
    <p class="info-item">
      <b>Downloads</b>
      {{downloads}}
    </p>
    </div>
    </div>
</a>
{{/each}}




