

{{!-- with-SimpleLightbox --}}

{{#each this}}
<a href="https://image.tmdb.org/t/p/w500/{{backdrop_path}}" >
  <div class="photo-card" style="border-style: solid; border-radius: 5px; border-width: 1px 3px 4px 2px;  border-color: rgb(226, 226, 226);">
  <img class="photo-card__img" style="display: block; width: 100%; height: 200px; object-fit: cover;" src="https://image.tmdb.org/t/p/w500/{{backdrop_path}}">
  <div class="info" style="flex-direction: column; padding: 10px 20px; ">
    <p class="info-item">
      <b>{{original_title}}</b>
    </p>
    <div style="display: flex; justify-content: space-between;">
        <p class="info-item">
      {{!-- <b>vote_count</b> --}}
      {{genre_ids}}
    </p>
    <p class="info-item">
      {{!-- <b>release_date</b> --}}
      {{release_date}}
    </p>
 
    </div>
  
    </div>
    </div>
</a>
{{/each}}




